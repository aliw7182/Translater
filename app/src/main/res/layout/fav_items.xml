<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/backgroundfav"
    android:layout_margin="7dp"
    android:weightSum="4"
    android:padding="7dp"
    >
    <ImageButton
        android:id="@+id/btnFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:alpha="1"
        android:background="@color/DragColor"
        android:src="@drawable/ic_rectangle_12" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:alpha="1"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_weight="2"
        >
        <TextView
            android:id="@+id/inputFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, how are you?"

            android:textSize="16sp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:src="@drawable/ic_line"
            />
        <TextView
            android:id="@+id/outputFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColor"
            android:alpha="0.5"
            android:text="Сәлем, қалайсың?"
            android:textSize="16sp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@color/KorzinaColor"
        android:src="@drawable/ic_favorite_trash" />


</LinearLayout>